<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}

        <link rel="stylesheet" href="https://bootswatch.com/5/yeti/bootstrap.min.css">

        <style>
            li {
                list-style: none;
            }

            a {
                text-decoration:none;
            }

            .comment-input {
                width: 50%;
            }

            .col-sm-3 {
                font-size: 16px;
                width: auto;
                margin: 16px 0 0 0;
            }

            .col-sm-9 {
                font-size: 14px;
                font-weight: lighter;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand">Cryptobook</a>
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_crypto') }}">{{'home'|trans}}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('crypto_search') }}">{{'search'|trans}}</a>
                    </li>
                </ul>
            </div>

            {% if app.user %}
                <div>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle show" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true" onclick="hideShow()">{{'languages'|trans}}</a>
                                <div class="dropdown-menu show" data-bs-popper="none">
                                    <ul>
                                        {% for key, locale in locales %}
                                            <li><a href="{{ path(app.request.get('_route'),
                                                    app.request.attributes.get('_route_params')|merge({'_locale': key})) }}" style="color: white">{{locale}}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('new_crypto') }}">{{'crypto.add'|trans}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_my_crypto') }}">{{'crypto.personal'|trans}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_logout') }}">{{'logout'|trans}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            {% else %}
                <div>
                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle show" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">{{'languages'|trans}}</a>
                                <div class="dropdown-menu show" data-bs-popper="none">
                                    <ul>
                                        {% for key, locale in locales %}
                                            <li><a href="{{ path(app.request.get('_route'),
                                                    app.request.attributes.get('_route_params')|merge({'_locale': key})) }}" style="color: white; text-decoration: none">{{locale}}</a></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">{{'registration'|trans}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">{{'login'|trans}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            {% endif %}
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
