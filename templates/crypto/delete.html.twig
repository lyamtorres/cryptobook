{% extends 'base.html.twig' %}

{% block body %}

    <div class="alert alert-danger">
        <h2><strong>{{'avertissement'|trans}}</strong></h2>
        <br>{{'warning'|trans}}
        <ul>
            <li><strong>{{'crypto.name'|trans}} : </strong> {{ crypto.nom }}</li>
            <li><strong>{{'crypto.symbol'|trans}} : </strong>{{ crypto.symbole }}</li>
            <li><strong>{{'crypto.category'|trans}} : </strong>{{ crypto.categorie }}</li>
            <li><strong>{{'crypto.price'|trans}} : </strong>{{ crypto.prix }}</li>
            <li><strong>{{'crypto.quantity'|trans}} : </strong>{{ crypto.quantite }}</li>
            <li><strong>{{'crypto.maxQuantity'|trans}} : </strong>{{ crypto.quantiteMax }}</li>
            <li><strong>{{'crypto.date'|trans}} : </strong>{{ crypto.date | date('m/d/Y') }}</li>
            <li><strong>{{'crypto.lastUpdate'|trans}} : </strong>{{ crypto.dateMaj | date('m/d/Y') }}</li>
        </ul>
    </div>
    <div class="collapse navbar-collapse">
        {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
        {{ form_widget(form) }}
        <a href="{{ path('app_my_crypto') }}" class="btn btn-success" role="button"><span class="glyphicon glyphicon-off" aria-hidden="true"></span> {{'form.cancel'|trans}}</a>
        <button type="submit" class="btn btn-danger" onClick="return confirm('Êtes vous sûr ?')">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            {{'form.delete'|trans}}
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}