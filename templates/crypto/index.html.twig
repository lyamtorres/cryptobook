{% extends 'base.html.twig' %}

{% block title %}Liste de Cryptomonnaies{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <h1>Liste de Cryptomonnaies</h1>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Créateur</th>
                <th scope="col">Quantité</th>
                <th scope="col">J'aime</th>
                <th scope="col">Favoris</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">1</th>
                <td>{{ cryptos[0].nom }}</td>
                <td>Satoshi Nakamoto</td>
                <td>20 000 000</td>
                <td>48</td>
                <td>⭐</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Ethereum</td>
                <td>Vitalik Buterin</td>
                <td>119 700 000</td>
                <td>63</td>
                <td>⭐</td>
            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}