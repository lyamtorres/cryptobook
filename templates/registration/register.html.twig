{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>{{ 'register'|trans }}</h1>

    {{ form_start(registrationForm) }}
        <div class="form-group">
            {{ form_label(registrationForm.pseudo, 'username'|trans, {

                label_attr: {'for':'inputPseudo'}
            }) }}
            {{ form_widget(registrationForm.pseudo, {
                attr: {'class':'form-control',
                    'placeholder':'jinkazama',
                    'id':'inputPseudo',
                    'required':'true',
                    'autofocus':'true'}
            }) }}
            {{ form_errors(registrationForm.pseudo) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.email, 'email'|trans, {
                label_attr: {'for':'inputEmail'}
            }) }}
            {{ form_widget(registrationForm.email, {
                attr: {'class':'form-control',
                    'placeholder':'jkazama@hotmail.com',
                    'id':'inputEmail',
                    'required':'true'}
            }) }}
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-group">
            {{ form_label(registrationForm.plainPassword, 'password'|trans, {
                label_attr: {'for':'inputPassword'}
            }) }}
            {{ form_widget(registrationForm.plainPassword, {
                attr: {'class':'form-control',
                    'placeholder':'a123456*',
                    'id':'inputPassword',
                    'required':'true'}
            }) }}

            {{ form_errors(registrationForm.plainPassword) }}
        </div>
        <div class="form-check">
            {{ form_row(registrationForm.agreeTerms, {label_attr: {class: 'form-check-label'}}) }}
        </div>
        <button type="submit" class="btn btn-success">{{ 'form.register'|trans }}</button>
    {{ form_end(registrationForm) }}
{% endblock %}
